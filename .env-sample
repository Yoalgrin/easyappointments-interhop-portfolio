# --- App ---
APP_ENV=development
APP_URL=http://localhost:8080

# --- Confirmation de RDV ---
# Si ton code lit encore EA_*, garde-les ; sinon duplique en INTERHOP_EA_ si tu as ajouté un fallback.
EA_REQUIRE_EMAIL_CONFIRMATION=true
EA_CONFIRM_TTL_SECONDS=300
EA_CONFIRM_HOLD_VISIBLE=false
EA_CONFIRM_RESEND_COOLDOWN=120
EA_EMAIL_FROM=no-reply@interhop.local
EA_EMAIL_FROM_NAME="Prise de RDV InterHop"

# (optionnel, si tu as ajouté le préfixe côté code)
# INTERHOP_EA_REQUIRE_EMAIL_CONFIRMATION=true
# INTERHOP_EA_CONFIRM_TTL_SECONDS=300
# INTERHOP_EA_CONFIRM_HOLD_VISIBLE=false
# INTERHOP_EA_CONFIRM_RESEND_COOLDOWN=120
# INTERHOP_EA_EMAIL_FROM=no-reply@interhop.local
# INTERHOP_EA_EMAIL_FROM_NAME="Prise de RDV InterHop"

# =========================
#   PROFIL SMTP À CHOISIR
# =========================

##########
# DEV — Mailpit/MailHog (pas d’auth)
##########
INTERHOP_EA_SMTP_DRIVER=mailhog
INTERHOP_EA_MAILHOG_HOST=localhost
INTERHOP_EA_MAILHOG_PORT=1025
# Optionnel : destinataire de test
INTERHOP_EA_TEST_TO=you@example.org

